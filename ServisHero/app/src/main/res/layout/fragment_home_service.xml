<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:gravity="center"
        android:text="H1"
        />
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/x4"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        >
    </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/x4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x4"
        android:textStyle="bold"
        android:textSize="@dimen/x8"
        android:textColor="@android:color/black"
        android:text="Suggested Offers"
        />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_question3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        >
    </android.support.v7.widget.RecyclerView>


    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/x4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/x4"
            >


            <TextView
                android:id="@+id/questionTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="none"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:scrollHorizontally="false"
                android:text="Read Order FAQ"
                android:textSize="@dimen/x6" />

            <ImageView
                android:src="@drawable/ic_navigate_next_black_36dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <Button
        android:layout_margin="@dimen/x4"
        android:text="CONTINUE"

        android:textColor="@android:color/white"
        android:background="@drawable/blue_round_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
</android.support.v4.widget.NestedScrollView>