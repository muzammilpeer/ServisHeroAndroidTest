<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/x4"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x4"
        >

        <ImageView
            android:id="@+id/iconImageView"
            android:src="@drawable/icon_cleaning"
            android:layout_margin="@dimen/x4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="none"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/x4"
            android:layout_marginEnd="@dimen/x4"
            android:textStyle="bold"
            android:scrollHorizontally="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x6" />

        <ImageView
            android:src="@drawable/ic_navigate_next_black_36dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


    </LinearLayout>
</android.support.v7.widget.CardView>
